<TextView android:text="@string/filterwarning" android:id="@+id/TextView07" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5px"></TextView>

<Button android:text="@string/save" android:id="@+id/Button01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="5px" android:layout_marginBottom="5px"></Button>

