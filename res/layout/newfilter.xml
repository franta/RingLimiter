<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TableLayout android:id="@+id/TableLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="3px">
<TextView android:text="@string/filtername" android:id="@+id/TextView06" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:textSize="25px"></TextView>
<EditText android:text="@string/empty" android:id="@+id/EditText01" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>

<TextView android:text="@string/filtertime" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:textSize="25px" android:layout_marginTop="10px"></TextView>

<TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" android:layout_gravity="center" android:layout_height="fill_parent" android:stretchColumns="*">
<TableRow>
<TextView android:text="@string/from" android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginRight="10px"></TextView>
