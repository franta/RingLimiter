<CheckBox android:text="@string/wednesday" android:id="@+id/CheckBox04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"></CheckBox>
<CheckBox android:text="@string/thursday" android:id="@+id/CheckBox05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"></CheckBox>
<CheckBox android:text="@string/friday" android:id="@+id/CheckBox06" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"></CheckBox>
<CheckBox android:text="@string/saturday" android:id="@+id/CheckBox07" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"></CheckBox>


<TextView android:text="@string/charging" android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:textSize="25px" android:layout_marginTop="10px"></TextView>

<Spinner android:id="@+id/Spinner01" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>

<TextView android:text="@string/orientation" android:id="@+id/TextView08" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:textSize="25px" android:layout_marginTop="10px"></TextView>
<Spinner android:id="@+id/Spinner03" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>

<TextView android:text="@string/calendarevent" android:id="@+id/TextView10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:textSize="25px" android:layout_marginTop="10px"></TextView>
<Spinner android:id="@+id/Spinner04" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>

<TextView android:text="@string/mode" android:id="@+id/TextView05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:textSize="25px" android:layout_marginTop="10px"></TextView>

