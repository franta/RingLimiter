<TimePicker android:id="@+id/TimePicker02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></TimePicker>
</TableRow>
</TableLayout>

<TextView android:text="@string/weekdays" android:id="@+id/TextView09" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:textSize="25px" android:layout_marginTop="10px"></TextView>
<CheckBox android:text="@string/sunday" android:id="@+id/CheckBox01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"></CheckBox>
<CheckBox android:text="@string/monday" android:id="@+id/CheckBox02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"></CheckBox>
